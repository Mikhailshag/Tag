using namespace std;

const int N = 4;
int game_plays[N][N];
int x, y,c = 0, k = 0;
int *px = &x, *py = &y;
int *pk = &k;
char Step;

void InGame_plays();
void ShowGame_plays();
void MixGame_plays();
void ShowGame_plays();
bool GameWin();
void GamePlay();
void GameStep();




int main()
{
	setlocale(LC_ALL, "RU");
	srand(time(NULL));


	InGame_plays();
	ShowGame_plays();
	MixGame_plays();
	ShowGame_plays();
	do {
		system("cls");
		ShowGame_plays();
		GameStep();
		ShowGame_plays();
